# ================================================
# AI Category Extractor - Environment Configuration
# ================================================

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=products
DB_USER=postgres
DB_PASSWORD=your_password_here

# ================================================
# LLM Provider Configuration
# ================================================
# Choose one provider: ollama (free, local), openai, anthropic, openrouter
LLM_PROVIDER=ollama

# ------------------------------------------------
# Ollama Configuration (Default - FREE & Local)
# ------------------------------------------------
# Install: curl -fsSL https://ollama.com/install.sh | sh
# Start: ollama serve
# Pull model: ollama pull gemma3:1b
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=gemma3:1b
OLLAMA_KEEP_ALIVE=5m

# ------------------------------------------------
# OpenAI Configuration
# ------------------------------------------------
# Uncomment if using OpenAI
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_BASE_URL=https://api.openai.com/v1

# ------------------------------------------------
# Anthropic Configuration
# ------------------------------------------------
# Uncomment if using Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ------------------------------------------------
# OpenRouter Configuration
# ------------------------------------------------
# Uncomment if using OpenRouter
# OPENROUTER_API_KEY=sk-or-...
# OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# ================================================
# Model Parameters
# ================================================
MODEL_TEMPERATURE=0.0
MAX_TOKENS=4096

# ================================================
# Browser Configuration
# ================================================
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=60000

# ================================================
# Logging Configuration
# ================================================
LOG_LEVEL=INFO
LOG_FILE=logs/category_extractor.log

# ================================================
# Extraction Limits
# ================================================
MAX_DEPTH=5
MAX_CATEGORIES=10000
MAX_RETRIES=3
RETRY_DELAY=2000
